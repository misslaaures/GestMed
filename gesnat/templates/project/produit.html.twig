<!-- /PAGE LEVEL SCRIPTS -->


<script type="text/javascript">

// Effacer formulaire 
function effacerform (idform, firstinput) {
  $(':input','#'+idform)
   .val('')
   .removeAttr('checked')
   .removeAttr('selected');

   $('input[name='+firstinput+']').focus();
}

function afficher(id)
{
    
    var url="{{ path('afficher_produit') }}";

    $.ajax({//envoi de requete ajax
        url      : url,//chargement de l'url associé au lien
        cache    : false,
        type: "POST",//envoi de requete ajax de type post
        data : 'id=' + id,
        dataType : "json",//format de données de type json
        error    : function(request, error) { // Info Debuggage si erreur   
                     alert("Erreur : responseText: "+request.responseText);
                   },
        success  : function(data) {  //si succès
            
            $('input[name=produitid]').val(data.id);
            $('input[name=designation]').val(data.designation);
            $('input[name=prix]').val(data.prix);
            $('input[name=qtestock]').val(data.qtestock);
            $('input[name=stockmini]').val(data.stockmini);

            if (data.categorieid==null)
            {
               $('#type').prop('selectedIndex',0);
            }
            else
            {
                $('#type option[value="'+data.categorieid+'"]').remove();
                $('#type').append('<option value="'+ data.categorieid +'" selected>'+ data.categorietitre +'</option>');
            }

           }       
   }) ;
    
}

function deleteItem() {
    if (confirm("Are you sure?")) {
        // your deletion code
    }
    return false;
}

function supprimer(id, libelle) {

    swal({
        title: "Etes-vous sure de vouloir supprimer le produit : "+libelle+" ?",
        text: "",
        // type: "warning",
        showCancelButton: true,
        confirmButtonColor: "#DD6B55",
        confirmButtonText: "Supprimer"
    },
    function () {

    var url="{{ path('supprimer_produit') }}";

    $.ajax({//envoi de requete ajax
        url      : url,//chargement de l'url associé au lien
        cache    : false,
        type: "POST",//envoi de requete ajax de type post
        data : 'id=' + id,
        dataType : "json",//format de données de type json
        error    : function(request, error) { // Info Debuggage si erreur   
                     alert("Erreur : responseText: "+request.responseText);
                   },
        success  : function(data) {  //si succès
            
                if (data.res==true)
                {
                     // Supprimer ligne Datable
                     var row = $('#'+id).closest('tr');
                     var table  = $('#tableau').DataTable();
                     table.row(row).remove().draw(false);
                }

           }       
        }) ;

    });
            
};

</script>

{% endblock %}
