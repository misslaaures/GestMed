{% block body %}

<!-- PAGE CONTENT -->
            <div class="content-wrapper">
                <div class="content">
                    <div class="row">
                    
                    {% for message in app.flashes('success') %}
                      <div class="alert alert-success" style="margin:auto; font-weight: bold;">
                          {{ message }}
                      </div>
                    {% endfor %}
                       
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-block">
                                    <h5 class="card-title">Gestion des patients</h5>
                                    <legend class="text-bold margin-top-30">Informations personnelles</legend>
                                    <form action="{{ path('enregistrer_patient') }}" method="post" class="form-horizontal" id="form1">
                                        <div class="row">
                                            <input type="hidden" class="form-control" name="patientid">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Nom</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="nompat" required>
                                                    </div>
                                                </div>
                                                

                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Sexe</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <select class="form-control" name="sexe" id="sexe" required>
                                                            <option value="">Sélectionner</option>
                                                            <option value="Masculin">Masculin</option>
                                                            <option value="Féminin">Féminin</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                            <div class="col-md-6">
                                                
                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Date de naissance</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <input type="date" class="form-control" name="datenaispat" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Fonction</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="fonctionpat" required>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Adresse</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="adressepat" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-md-3">
                                                        <label class="control-label col-form-label">Téléphone</label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="telephonepat" required>
                                                    </div>
                                                </div>
                                                
                                                <div class="pull-right margin-top-20">
                                            <a onclick="effacerform('form1','nompat')" class="btn btn-secondary">
                                                Annuler
                                                <i class="fa fa-refresh position-right"></i>
                                            </a>

                                            <button type="submit" class="btn btn-primary">
                                                Enregistrer
                                                <i class="fa fa-arrow-right position-right"></i>
                                            </button>
                                        </div>
                                            </div>

                                        </div>

                                        <legend class="text-bold margin-top-30">Liste des patients</legend>
                                          <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-block">
                                    
                                    <table class="display datatable table table-stripped" id="tableau" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Fonction</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           {% for p in patients %}
                                            <tr>
                                                <td >{{ p.id }}</td>
                                                <td> {{ p.nompat }} </td>
                                                <td> {{ p.fonctionpat }} </td>
                                                <td>{{ p.datemodif|date('d-m-Y') }}</td>
                                                <td>
                                                <a onclick="afficher('{{ p.id }}');" class="btn btn-outline-warning btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                                
                                                <a id="{{ p.id }}" onclick="supprimer('{{ p.id }}', '{{ p.nompat }}')" class="btn btn-outline-danger btn-rounded"><i class="fa fa-trash" aria-hidden="true"></i></a> 
                                                </td>
                                            </tr>
                                            {% else %}
                                                <tr><td>Aucun patient créé</td></tr>
                                            {% endfor %}
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /PAGE CONTENT -->

{% endblock %}


{% block javascripts %}

<script type="text/javascript" src="{{ asset('assets/lib/js/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/lib/js/tether.min.js') }}"></script>
