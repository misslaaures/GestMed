<!-- PAGE LEVEL SCRIPTS -->
<script type="text/javascript" src="{{ asset('assets/lib/js/jquery.dataTables.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/assets/js/pages_datatables.min.js') }}"></script>
<!-- /PAGE LEVEL SCRIPTS -->


<script type="text/javascript">

// Effacer formulaire 
function effacerform (idform, firstinput) {
  $(':input','#'+idform)
   .val('')
   .removeAttr('checked')
   .removeAttr('selected');

   $('input[name='+firstinput+']').focus();
}

function afficher(id)
{
    
    var url="{{ path('afficher_patient') }}";

    $.ajax({//envoi de requete ajax
        url      : url,//chargement de l'url associé au lien
        cache    : false,
        type: "POST",//envoi de requete ajax de type post
        data : 'id=' + id,
        dataType : "json",//format de données de type json
        error    : function(request, error) { // Info Debuggage si erreur   
                     alert("Erreur : responseText: "+request.responseText);
                   },
        success  : function(data) {  //si succès
            
            $('input[name=patientid]').val(data.id);
            $('input[name=nompat]').val(data.nompat);
            
            $('input[name=datenaispat]').val(data.datenaispat);
            $('input[name=fonctionpat]').val(data.fonctionpat);
            $('input[name=adressepat]').val(data.adressepat);
            $('input[name=telephonepat]').val(data.telephonepat);

            if (data.sexepat==null)
            {
               $('#sexe').prop('selectedIndex',0);
            }
            else
            {
                $('#sexe option[value="'+data.sexepat+'"]').remove();
                $('#sexe').append('<option value="'+ data.sexepat +'" selected>'+ data.sexepat +'</option>');
            }

           }       
   }) ;
    
}



function supprimer(id, libelle) {

    swal({
        title: "Etes-vous sure de vouloir supprimer le patient : "+libelle+" ?",
        text: "",
        // type: "warning",
        showCancelButton: true,
        confirmButtonColor: "#DD6B55",
        confirmButtonText: "Supprimer"
    },
    function () {

    var url="{{ path('supprimer_patient') }}";

    $.ajax({//envoi de requete ajax
        url      : url,//chargement de l'url associé au lien
        cache    : false,
        type: "POST",//envoi de requete ajax de type post
        data : 'id=' + id,
        dataType : "json",//format de données de type json
        error    : function(request, error) { // Info Debuggage si erreur   
                     alert("Erreur : responseText: "+request.responseText);
                   },
        success  : function(data) {  //si succès
            
                if (data.res==true)
                {
                     // Supprimer ligne Datable
                     var row = $('#'+id).closest('tr');
                     var table  = $('#tableau').DataTable();
                     table.row(row).remove().draw(false);
                }

           }       
        }) ;

    });
            
};

</script>

{% endblock %}

