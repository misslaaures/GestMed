<script type="text/javascript">

// Effacer formulaire 
function effacerform (idform, firstinput) {
  $(':input','#'+idform)
   .val('')
   .removeAttr('checked')
   .removeAttr('selected');

   $('input[name='+firstinput+']').focus();
}

